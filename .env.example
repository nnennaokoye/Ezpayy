# ==============================================
# EZPAY PROJECT ENVIRONMENT VARIABLES
# ==============================================
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control!

# ==============================================
# BLOCKCHAIN CONFIGURATION
# ==============================================

# Private key for deployment (WITHOUT 0x prefix)
# ⚠️  CRITICAL: Keep this secret and secure!
PRIVATE_KEY=your_private_key_here_without_0x_prefix

# Mantle Sepolia Testnet RPC URLs
MANTLE_SEPOLIA_RPC_URL=https://rpc.sepolia.mantle.xyz
MANTLE_SEPOLIA_RPC_URL_BACKUP=https://sepolia.mantlenetwork.io

# Mantle Mainnet RPC URLs (for future use)
MANTLE_MAINNET_RPC_URL=https://rpc.mantle.xyz
MANTLE_MAINNET_RPC_URL_BACKUP=https://mantlenetwork.io

# ==============================================
# CONTRACT ADDRESSES
# ==============================================

# Deployed Ezpay contract address on Mantle Sepolia
EZPAY_CONTRACT_ADDRESS=0x9A2478962cC59f0A606D536937883cE5845eA400

# ==============================================
# EXPLORER & VERIFICATION
# ==============================================

# Mantle Sepolia Explorer API Key (for verification)
MANTLESCAN_API_KEY=your_mantlescan_api_key_here

# Blockscout API endpoints
MANTLE_SEPOLIA_EXPLORER_URL=https://explorer.sepolia.mantle.xyz
MANTLE_MAINNET_EXPLORER_URL=https://explorer.mantle.xyz

# ==============================================
# FRONTEND CONFIGURATION
# ==============================================

# Web app configuration
NEXT_PUBLIC_CHAIN_ID=5003
NEXT_PUBLIC_CONTRACT_ADDRESS=0x9A2478962cC59f0A606D536937883cE5845eA400
NEXT_PUBLIC_RPC_URL=https://rpc.sepolia.mantle.xyz

# WalletConnect Project ID (get from https://cloud.walletconnect.com)
NEXT_PUBLIC_WALLETCONNECT_PROJECT_ID=your_walletconnect_project_id_here

# Pimlico AA (Mantle Sepolia)
# ERC-4337 gasless flow. Set both to true to enable on server and client.
USE_PIMLICO=true
# Client AA path
NEXT_PUBLIC_USE_PIMLICO=true
PIMLICO_API_KEY=your_pimlico_api_key_here
PIMLICO_BUNDLER_URL=https://api.pimlico.io/v2/5003/rpc?apikey=${PIMLICO_API_KEY}
PIMLICO_PAYMASTER_URL=https://api.pimlico.io/v2/5003/rpc?apikey=${PIMLICO_API_KEY}

# Client-readable Pimlico URLs (frontend AA)
NEXT_PUBLIC_PIMLICO_BUNDLER_URL=https://api.pimlico.io/v2/5003/rpc?apikey=${PIMLICO_API_KEY}
NEXT_PUBLIC_PIMLICO_PAYMASTER_URL=https://api.pimlico.io/v2/5003/rpc?apikey=${PIMLICO_API_KEY}

# Optional: Frontend RPC URL override used by viem/wagmi
RPC_URL=https://rpc.sepolia.mantle.xyz

# ==============================================
# DEVELOPMENT & TESTING
# ==============================================

# Gas settings for deployment
GAS_LIMIT=2000000
MAX_FEE_PER_GAS=20000000000
MAX_PRIORITY_FEE_PER_GAS=1000000000

# Test account addresses (optional)
TEST_ACCOUNT_1=0x...
TEST_ACCOUNT_2=0x...

# ==============================================
# OPTIONAL SERVICES
# ==============================================

# Alchemy API Key (alternative RPC provider)
ALCHEMY_API_KEY=your_alchemy_api_key_here

# Infura API Key (alternative RPC provider)
INFURA_API_KEY=your_infura_api_key_here

# Etherscan API Key (for contract verification)
ETHERSCAN_API_KEY=your_etherscan_api_key_here
